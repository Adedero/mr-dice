<div class="flex <%= locals.flexDirection ?? 'flex-row' %> items-center justify-center gap-4">
  <% locals.socials.forEach(link => { %>
    <a href="<%= link.href %>" target="_blank" rel="noopener noreferrer">
      <span class="<%= link.icon %>" style="font-size: <%= locals.size ?? '1.7rem' %>;"></span>
    </a>
  <% }) %>
</div>